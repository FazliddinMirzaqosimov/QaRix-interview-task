generator client {
  provider = "prisma-client-js"
 }

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model Car {
  id         Int        @id @default(autoincrement())
  model      CarModel?      @relation(fields: [model_id], references: [id], onDelete: SetNull)
  model_id   Int?
  year       Int
  vin        String   @unique
  ownerName  String?
  createdAt  DateTime @default(now())
}


model CarModel{
  id        Int        @id @default(autoincrement())
  name      String   @unique
  cars      Car[]
  createdAt DateTime @default(now())
}